<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ismoney.controller.BudgetController">
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Budget Management" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="addBudgetBtn" onAction="#handleAddBudget" prefWidth="120.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Tambah Budget" />
                <Button fx:id="refreshBtn" onAction="#handleRefresh" prefWidth="80.0"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white;"
                        text="Refresh" />
            </HBox>

            <!-- Summary Cards -->
            <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10 0 0 0;">
                <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="Total Budget" style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                    <Label fx:id="totalBudgetLabel" text="Rp 0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="Total Spent" style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                    <Label fx:id="totalSpentLabel" text="Rp 0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FF5722;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="Remaining" style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                    <Label fx:id="remainingBudgetLabel" text="Rp 0" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7" orientation="HORIZONTAL">
            <items>
                <!-- Left side - Table and Filters -->
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                    <!-- Filters -->
                    <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-background-radius: 5;">
                        <Label text="Filter:" style="-fx-font-weight: bold;" />
                        <Label text="Period:" />
                        <ComboBox fx:id="filterPeriodBox" prefWidth="120.0" />
                        <CheckBox fx:id="showActiveOnlyBox" text="Active Only" />
                    </HBox>

                    <!-- Budget Table -->
                    <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Category" />
                            <TableColumn fx:id="limitColumn" prefWidth="100.0" text="Limit" />
                            <TableColumn fx:id="spentColumn" prefWidth="100.0" text="Spent" />
                            <TableColumn fx:id="remainingColumn" prefWidth="100.0" text="Remaining" />
                            <TableColumn fx:id="periodColumn" prefWidth="80.0" text="Period" />
                            <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                            <TableColumn fx:id="actionColumn" prefWidth="140.0" text="Actions" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <!-- Right side - Chart -->
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                    <Label text="Budget Usage Chart" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                    <PieChart fx:id="budgetChart" VBox.vgrow="ALWAYS" />

                    <!-- Chart Legend/Info -->
                    <VBox spacing="5.0" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-background-radius: 5;">
                        <Label text="Legend:" style="-fx-font-weight: bold; -fx-font-size: 12;" />
                        <HBox spacing="10.0">
                            <Label text="●" style="-fx-text-fill: red; -fx-font-size: 16;" />
                            <Label text="Over Budget" style="-fx-font-size: 11;" />
                        </HBox>
                        <HBox spacing="10.0">
                            <Label text="●" style="-fx-text-fill: orange; -fx-font-size: 16;" />
                            <Label text="Near Limit (70%+)" style="-fx-font-size: 11;" />
                        </HBox>
                        <HBox spacing="10.0">
                            <Label text="●" style="-fx-text-fill: green; -fx-font-size: 16;" />
                            <Label text="Healthy" style="-fx-font-size: 11;" />
                        </HBox>
                    </VBox>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Budget Status:" style="-fx-font-weight: bold;" />
            <Label text="Active budgets are highlighted based on usage percentage" style="-fx-font-style: italic; -fx-text-fill: #666;" />
        </HBox>
    </bottom>
</BorderPane>
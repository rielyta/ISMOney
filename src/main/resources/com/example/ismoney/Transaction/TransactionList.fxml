<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="498.0" prefWidth="780.0" style="-fx-background-color: radial-gradient(center 50% 50%, radius 100%, #63DBF3 0%, #A2EEF9 60%, #FFFFFF 90%);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ismoney.controller.TransactionListController">
    <children>
        <TableView fx:id="transactionTable" layoutX="42.0" layoutY="265.0" prefHeight="219.0" prefWidth="510.0">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="83.0" text="Tanggal" />
                <TableColumn fx:id="incomeColumn" prefWidth="109.0" text="Pendapatan" />
                <TableColumn fx:id="expenseColumn" prefWidth="109.0" text="Pengeluaran" />
                <TableColumn fx:id="categoryColumn" prefWidth="98.0" text="Kategori" />
                <TableColumn fx:id="totalColumn" prefWidth="95.0" text="Total" />
            </columns>
        </TableView>

        <Button fx:id="addTransactionButton" layoutX="560.0" layoutY="382.0" mnemonicParsing="false" onAction="#handleAddTransaction" prefHeight="25.0" prefWidth="139.0" text="Tambah Transaksi" />

        <LineChart fx:id="lineChart" animated="true" createSymbols="true" layoutX="40.0" layoutY="76.0" legendVisible="true" prefHeight="177.0" prefWidth="704.0" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1;">
            <xAxis>
                <CategoryAxis label="" side="BOTTOM" style="-fx-tick-label-font-size: 10px; -fx-tick-label-fill: #666666;" tickLabelsVisible="true" tickMarkVisible="false" />
            </xAxis>
            <yAxis>
                <NumberAxis forceZeroInRange="false" label="" side="LEFT" style="-fx-tick-label-font-size: 10px; -fx-tick-label-fill: #666666;" tickLabelsVisible="true" tickMarkVisible="false" />
            </yAxis>
        </LineChart>

        <Label layoutX="274.0" layoutY="30.0" prefHeight="47.0" prefWidth="354.0" text="Daftar Transaksi" textFill="#8c0093">
            <font>
                <Font name="Arial Black" size="32.0" />
            </font>
        </Label>

        <TextField fx:id="searchField" layoutX="637.0" layoutY="273.0" onAction="#handleFilter" prefHeight="25.0" prefWidth="112.0" promptText="Cari kategori/catatan..." />
        <Button fx:id="searchButton" layoutX="560.0" layoutY="273.0" mnemonicParsing="false" onAction="#handleFilter" prefHeight="25.0" prefWidth="69.0" text="Cari" />
        <ComboBox fx:id="filterComboBox" layoutX="560.0" layoutY="308.0" onAction="#handleFilter" prefHeight="25.0" prefWidth="129.0" promptText="Filter" />
        <Button fx:id="editButton" layoutX="560.0" layoutY="343.0" mnemonicParsing="false" onAction="#handleEdit" prefHeight="25.0" prefWidth="60.0" text="Edit" />
        <Button fx:id="deleteButton" layoutX="632.0" layoutY="343.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="25.0" prefWidth="60.0" text="Hapus" />
      <Button fx:id="backButton" layoutX="40.0" layoutY="40.0" mnemonicParsing="false" onAction="#backTo" prefHeight="26.0" prefWidth="74.0" style="-fx-background-color: #025d6b;" text="Kembali" textFill="WHITE" />
    </children>
</AnchorPane>
